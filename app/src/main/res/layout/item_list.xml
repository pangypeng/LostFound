<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        style="@style/Smile.TextView._Black"
        android:text="红色钱包"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/tv_describe"
        android:layout_marginTop="10dp"
        android:text="周三早上丢失红色钱包，在食堂二楼"
        style="@style/Smile.TextView._gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:minLines="1"
        android:maxLines="2"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="20dp"
        android:text="20130240122"
        style="@style/Smile.TextView._gray"
        android:textSize="14sp"
        android:layout_below="@id/tv_describe"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="12sp"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        style="@style/Smile.TextView._White"
        android:layout_below="@id/tv_describe"
        android:background="@color/green"
        android:text="13245678902"
        android:gravity="center"
        android:drawableLeft="@drawable/icon_photo"/>



</RelativeLayout>